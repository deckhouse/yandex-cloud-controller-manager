# This file is for unifying the coding style for different editors and IDEs.
# More information at http://EditorConfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[Makefile]
indent_style = tab

[.travis.yml]
indent_style = space
indent_size = 2

[*.go]
indent_style = tab
indent_size = 4

[*.toml]
indent_size = 2
indent_style = space

[*.yaml]
indent_size = 2
indent_style = space
